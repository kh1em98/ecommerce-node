    <link href="form/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">Update Profile</h2>
                </div> <% include ./partials/messages.ejs %> <div class="card-body">
                    <form method="POST" action="/user">
                        <div class="form-row">
                            <div class="name">Name</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" name="name" value='<%= user.name  %>'>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Address</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" name="address"
                                        value='<%= user.address %>'>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Email</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="email" name="email" value=<%= user.email %>
                                        disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Phone</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" name="phone" value=<%= user.phone  %>>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn--radius-2 btn--red" type="submit">Update</button>
                        <a href="/" class="btn btn--radius-2 btn--blue" type="submit">Go Back</a>
                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <!-- Jquery JS-->
    <script src="form/vendor/jquery/jquery.min.js"></script>
